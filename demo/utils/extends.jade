extends ../template

block variables
    - var url = '../utils/extends.html';

block component-name
    | Extends

block component
    h3.title Background Colors
    :jade
        .custom-element-1 My background is primary
        .custom-element-2 My background is success
        .custom-element-3 My background is warning
        .custom-element-4 My background is danger
        .custom-element-5 My background is info
    :scss
        %custom-element {
            padding: 20px;
            margin-bottom: 10px;
        }

        .custom-element-1 {
            @extend %ko-background--primary;
            @extend %custom-element;
        }

        .custom-element-2 {
            @extend %ko-background--success;
            @extend %custom-element;
        }

        .custom-element-3 {
            @extend %ko-background--warning;
            @extend %custom-element;
        }

        .custom-element-4 {
            @extend %ko-background--danger;
            @extend %custom-element;
        }

        .custom-element-5 {
            @extend %ko-background--info;
            @extend %custom-element;
        }