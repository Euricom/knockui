extends ../_template

block variables
    - var url = '../utils/layout.html';

block component-name
    | Layout

block component
    h4.title Page layout
    p.text The page layout adds a maximum width to your application and makes sure that the content is always center aligned.
    :jade
        body
            .custom-topbar
                .ko-page__layout
                    | Header Content
            .ko-page__layout
                .custom-page
                    .custom-sidebar
                        | Sidebar Content
                    .custom-content
                        | Actual Content
    :scss
        .custom-topbar {
            background-color: $ko-color-primary;
            color: white;
            height: 70px;
        }

        .custom-page {
            @extend %ko-grid;
        }

        .custom-sidebar {
            @extend %ko-grid__cell--3;
            background-color: $ko-color-gray;
            height: 200px;
        }

        .custom-content {
            @extend %ko-grid__cell--9;
            background-color: $ko-color-gray;
            height: 200px;
        }