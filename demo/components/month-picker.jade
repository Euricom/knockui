        .ko-monthpicker
            p <a href="somelink.com" class="ko-monthpicker__present">Present</a>
            hr.ko-divider

            .ko-monthpicker__yeartitle
                button.year-back test
                h4.ko-monthpicker__year 2015
                button.year-next test

            .ko-monthpicker__months
                .ko-monthcontainer
                    a(class='ko-month', href='') January
