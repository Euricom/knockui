                    a(class='ko-month', href='') February
                .ko-monthcontainer
                    a(class='ko-month', href='') March
                .ko-monthcontainer
                    a(class='ko-month', href='') April
                .ko-monthcontainer
                    a(class='ko-month', href='') May
                .ko-monthcontainer
                    a(class='ko-month', href='') June
                .ko-monthcontainer
                    a(class='ko-month--inactive', href='') July
                .ko-monthcontainer
                    a(class='ko-month--inactive', href='') August
                .ko-monthcontainer
                    a(class='ko-month--inactive', href='') September
                .ko-monthcontainer
                    a(class='ko-month--inactive', href='') October
                .ko-monthcontainer
                    a(class='ko-month--inactive', href='') November
                .ko-monthcontainer
                    a(class='ko-month--inactive', href='') December
